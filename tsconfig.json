{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "lib": ["es2017"],
      "paths": {
        "*": ["node_modules/*", "src/types/*"],
        "@utils": ["src/utils/*"]
      }
    },
    "include": ["src/**/*", "src/locales/*.json"]
  }